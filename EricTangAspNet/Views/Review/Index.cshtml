@model IEnumerable<Review>

@{ 
    ViewBag.Title = "Reviews";
}

<!-- Header -->
<header>
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <img class="img-responsive" src="~/static/img/profile.png" alt="">
                <div class="intro-text">
                    <span class="name">Now You Can See Me!</span>
                    <hr class="star-light">
                    <span class="skills">Full Stack Web Developer - Data Scientist - Soccer Fanatic</span>
                </div>
            </div>
        </div>
    </div>
</header>

<h3 class="col-md-6 col-md-offset-3"><p>What other's say:</p></h3>

@foreach (var review in Model)
{
    @Html.Partial("_singleReview", review)
}